{
  "plugins": [
    "eslint",
    "oxc",
    "unicorn",
    "promise",
    "import",
    "typescript",
    "jsx_a11y"
  ],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "warn"
  },
  "rules": {
    "no-alert": "error",
    "no-var": "error",
    "no-eval": "error",
    "eqeqeq": "error",
    "no-array-constructor": "error",
    "no-redeclare": "error",
    "no-throw-literal": "error",
    "no-new-wrappers": "error",
    "no-self-compare": "error",
    "no-static-only-class": "error",
    "avoid-new": "error",
    "error-message": "error",
    "filename-case": ["error", { "case": "kebabCase" }],
    "no-null": "error",
    "throw-new-error": "error",
    "switch-case-braces": "error",
    "numeric-separators-style": "error",
    "prefer-for-of": "warn",
    "no-magic-numbers": [
      "warn",
      { "ignore": [-1, 0, 1, 2, 5, 10, 60, 200, 400, 404, 500] }
    ],
    "no-fallthrough": "warn"
  }
}
