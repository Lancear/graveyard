{
  "tasks": {
    "start": "deno run --env-file --allow-env --allow-net --allow-sys --allow-read src/main.ts",
    "dev": "deno run --watch --env-file --allow-env --allow-net --allow-sys --allow-read src/main.ts",
    "check": "deno check src/main.ts",
    "test": "deno test --no-check",
    "fmt": "deno fmt",
    "lint": "deno run --allow-env --allow-read --allow-run npm:oxlint@latest"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "chalk": "npm:chalk@^5.4.1",
    "mongodb": "npm:mongodb@^6.15.0",
    "ulid": "npm:ulid@^3.0.0"
  }
}
